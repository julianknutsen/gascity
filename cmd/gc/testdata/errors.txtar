# Error paths for gc CLI.

env GC_BEADS=file
env GC_DOLT=skip

# No args shows help.
exec gc
stdout 'Available Commands'

# Unknown command.
! exec gc blorp
stderr 'unknown command "blorp"'

# gc init already initialized.
exec gc init $WORK/err-city
! exec gc init $WORK/err-city
stderr 'already initialized'

# gc init --file with nonexistent file.
! exec gc init --file bogus $WORK/file-city
stderr 'reading'

# gc rig with no subcommand.
! exec gc rig
stderr 'missing subcommand'

# gc rig unknown subcommand.
! exec gc rig blorp
stderr 'unknown subcommand "blorp"'

# gc rig add with no path (need a city first).
cd $WORK/err-city
! exec gc rig add
stderr 'missing path'

# gc rig add with non-existent path.
! exec gc rig add $WORK/nonexistent
stderr 'no such file'

# gc rig add not a directory.
! exec gc rig add $WORK/err-city/city.toml
stderr 'is not a directory'

# gc rig add outside a city.
cd $WORK
! exec gc rig add $WORK/err-city
stderr 'not in a city directory'

# gc rig list outside a city.
! exec gc rig list
stderr 'not in a city directory'

# gc bd close with no ID (need a city first).
cd $WORK/err-city
! exec gc bd close
stderr 'missing bead ID'

# gc bd close with non-existent ID.
! exec gc bd close gc-999
stderr 'bead not found'

# gc bd create with no title (need a city first).
! exec gc bd create
stderr 'missing title'

# gc bd show with no ID.
! exec gc bd show
stderr 'missing bead ID'

# gc bd show with non-existent ID.
! exec gc bd show gc-999
stderr 'bead not found'

# gc bd create outside a city.
cd $WORK
! exec gc bd create 'test'
stderr 'not in a city directory'

# gc bd show outside a city.
! exec gc bd show gc-1
stderr 'not in a city directory'

# gc bd close outside a city.
cd $WORK
! exec gc bd close gc-1
stderr 'not in a city directory'

# gc bd list outside a city.
! exec gc bd list
stderr 'not in a city directory'

# gc bd ready outside a city.
! exec gc bd ready
stderr 'not in a city directory'

# gc agent with no subcommand.
! exec gc agent
stderr 'missing subcommand \(add, attach, claim, claimed, drain, drain-ack, drain-check, list, nudge, unclaim, undrain\)'

# gc agent unknown subcommand.
! exec gc agent blorp
stderr 'unknown subcommand "blorp"'

# gc agent add without --name.
cd $WORK/err-city
! exec gc agent add
stderr 'missing.*--name'

# gc agent add duplicate.
exec gc agent add --name dupe
! exec gc agent add --name dupe
stderr 'already exists'

# gc agent list outside a city.
cd $WORK
! exec gc agent list
stderr 'not in a city directory'

# gc agent attach missing name (need a city first).
cd $WORK/err-city
! exec gc agent attach
stderr 'missing agent name'

# gc agent attach — no agents configured.
cd $WORK/bare-city
! exec gc agent attach mayor
stderr 'no agents configured'

# gc agent attach — agent not found.
cd $WORK/err-city
! exec gc agent attach nonexistent
stderr 'agent "nonexistent" not found'

# gc agent claimed missing agent name.
! exec gc agent claimed
stderr 'missing agent name'

# gc agent claimed with no claimed bead.
! exec gc agent claimed nobody
stderr 'bead not found'

# gc agent claimed outside a city.
cd $WORK
! exec gc agent claimed worker
stderr 'not in a city directory'

cd $WORK/err-city

# gc agent claim missing args.
cd $WORK/err-city
! exec gc agent claim
stderr 'usage:'

# gc agent claim with only one arg.
! exec gc agent claim worker
stderr 'usage:'

# gc agent claim agent not found.
! exec gc agent claim nonexistent gc-1
stderr 'agent "nonexistent" not found'

# gc agent claim bead not found.
! exec gc agent claim mayor gc-999
stderr 'bead not found'

# gc stop not in city.
cd $WORK
! exec gc stop
stderr 'not in a city directory'

# gc stop with path not in city.
! exec gc stop $WORK/nonexistent
stderr 'not in a city directory'

-- bare-city/.gc/.keep --
-- bare-city/rigs/.keep --
-- bare-city/city.toml --
# bare config
